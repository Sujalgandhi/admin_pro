<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Product</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f0f0f0;
            font-family: 'Poppins', sans-serif;
        }

        .container {
            max-width: 500px;
            margin: 0 auto;
            padding: 30px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .input-field {
            padding: 15px;
            border: none;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .button {
            background-color: #007bff;
            border-radius: 5px;
            padding: 10px 20px;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

        .button:hover {
            background-color: #0056b3;
        }
    </style>
</head>

<body class="d-flex align-items-center justify-content-center min-vh-100">
    <div class="container">
        <h1 class="text-center mb-4 fs-2 fw-bold">Add Product</h1>
        <form action="/product/addProduct" method="post">
            <div class="mb-3">
                <label for="image" class="form-label">Product Image</label>
                <input type="text" name="image" id="image" placeholder="Enter image URL" class="input-field" required>
            </div>
            <div class="mb-3">
                <label for="productname" class="form-label">Product Name</label>
                <input type="text" name="productname" id="productname" placeholder="Enter product name" class="input-field" required>
            </div>
            <div class="mb-3">
                <label for="productprice" class="form-label">Product Price</label>
                <input type="number" name="productprice" id="productprice" placeholder="Enter product price" class="input-field" required>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Product Description</label>
                <input type="text" name="description" id="description" placeholder="Enter description" class="input-field" required>
            </div>
            <div class="mb-3">
                <label for="category" class="form-label">Product Category</label>
                <select name="CategoryId" id="category" class="input-field">
                    <option value="" selected disabled>--Select Category--</option>
                    <% cat.forEach(val=> { %>
                    <option value="<%= val._id %>">
                        <%= val.cat_name %>
                    </option>
                    <% }) %>
                </select>
            </div>
            <div class="mb-3">
                <label for="subcategory" class="form-label">Product SubCategory</label>
                <select name="subCategoryId" id="subcategory" class="input-field">
                    <option value="" selected disabled>--Select SubCategory--</option>
                    <% subcat.forEach(val=> { %>
                    <option value="<%= val._id %>">
                        <%= val.subcat_name %>
                    </option>
                    <% }) %>
                </select>
            </div>
            <div class="mb-3">
                <label for="extracategory" class="form-label">Product ExtraCategory</label>
                <select name="extraCategoryId" id="extracategory" class="input-field">
                    <option value="" selected disabled>--Select ExtraCategory--</option>
                    <% extracat.forEach(val=> { %>
                    <option value="<%= val._id %>">
                        <%= val.extracat_name %>
                    </option>
                    <% }) %>
                </select>
            </div>
            <div class="mb-3">
                <input type="submit" value="Submit" class="btn button">
            </div>
        </form>
    </div>
</body>

</html>